{% extends 'base.html.twig' %}

{% block title %} {{ parent() }} - Liste des joueurs {% endblock %}

{% block body %}

    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>


    <h1 class="title is-1 has-text-white example-wrapper">Liste des joueurs</h1>
    <table class="table is-striped is-fullwidth m-3 example-wrapper">

    <tr>
        <th>Nom</th>
        <th>Prénom</th>
        <th>Date de naissance</th>
        <th>Email</th>
        <th>Score</th>
        <th>Numéro</th>
        <th>Rue</th>
        <th>Code postal</th>
        <th>Ville</th>
        <th>Pays</th>
        <th width="250px"></th>
    </tr>

    {%  for user in users %}

        <tr>
            <td>{{ user.firstname }}</td>
            <td>{{ user.lastname }}</td>
            <td>{{ user.birthdate|date('Y-m-d') }}</td>
            <td>{{ user.email }}</td>
            <td>{{ user.score }}</td>
            <td>{{ user.streetNumber }}</td>
            <td>{{ user.streetName }}</td>
            <td>{{ user.zip }}</td>
            <td>{{ user.city }}</td>
            <td>{{ user.country }}</td>

            <td>
                <a href="{{ path('app_admin_player_edit', {'id': user.id}) }}"
                   class="button is-info">
                    Modifier
                </a>
                <a href="{{ path('app_admin_player_delete', {'id': user.id}) }}"
                   class="button is-danger">
                    Supprimer
                </a>
            </td>
        </tr>

    {% endfor %}
    </table>
{% endblock %}