{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Joueurs/Cartes{% endblock %}

{% block body %}

    <style>
        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }
    </style>

    <div class="example-wrapper">
        <br>
        <h1 class="title is-1 has-text-white">Cartes</h1>
        <br>

        <a href="{{ path('app_search_searchcard') }}"
           class="button is-light mb-3">
            Recherche une carte
        </a>

        <a href="{{ path('app_admin_card_edit') }}"
           class="button is-light mb-3">
            Ajouter une carte
        </a> <br> <br>

        <table class="table">
            <tr>
                <th>Code Centre</th>
                <th>Code carte</th>
                <th>Clé</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Statut</th>
                <th>Nombre de parties</th>
                <th width="250px"></th>
            </tr>
            {% for key,card in cards %}
                {% if card.user %}
                    <tr>
                        <td>{{ card.codeCentre }}</td>
                        <td>{{ card.codeCard }}</td>
                        <td>{{ card.checksum }}</td>
                        <td>{{ card.user.lastname }}</td>
                        <td>{{ card.user.firstname }}</td>
                        <td>{{ card.status }}</td>
                        <td>{{ card.numberOfGames }}</td>
                        <td>
                           {% if workflow_can(card, 'active') %}
                                <a href="{{ path('card_workflow', {'id': card.id,
                                'state' : 'active'}) }}"
                                   class="btn btn-primary">
                                    Activer
                                </a>
                               {% endif %}

                                {% elseif card.getStatus()=="active" %}
                                    <div style="color: green;">Activé</div>
                            {% else %}
                                {% if workflow_can(card, 'affected') %}
                                <a href="{{ path('card_workflow', {'id': card.id,
                                'state' : 'affected'}) }}"
                                   class="btn btn-primary">
                                    Attribué
                                </a>
                            {% endif %}
                        </td>
                        <td>
                            <a href="{{ path('app_admin_card_delete', {'id': card.id}) }}"
                               class="btn btn-danger">
                                Supprimer
                            </a>
                        </td>
                    </tr>
                {% endif %}
            {% endfor %}
            {% for key,card in cards %}
                    {% if card.user is null%}
                    <tr>
                         <td>{{ card.codeCentre }}</td>
                         <td>{{ card.codeCard }}</td>
                         <td>{{ card.checksum }}</td>
                         <td>- - -</td>
                         <td>- - -</td>
                         <td>{{ card.status }}</td>
                         <td>{{ card.numberOfGames }}</td>
                         <td>
                             {% if workflow_can(card, 'affected') %}
                                 <a href="{{ path('card_workflow', {'id': card.id,
                                     'state' : 'affected'}) }}"
                                    class="btn btn-primary">
                                     Attribué
                                 </a>
                             {% endif %}
                        <td>
                            <a href="{{ path('app_admin_card_delete', {'id': card.id}) }}"
                               class="btn btn-danger">
                                Supprimer
                            </a>
                        </td>
                     <tr>
                    {% endif %}
            {% endfor %}
                {% if cards is empty%}
            <tr>
                <td colspan="5" class="text-center">
                    Aucun résultat
                </td>
            </tr>
            {% endif %}
        </table>
    </div>

{% endblock %}
