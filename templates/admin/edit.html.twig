{% extends 'base.html.twig' %}

{% block body %}


    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
{{ form_start(form) }}



    <div class="field">
        <div class="control"></div>
            <span class="icon is-small is-left">
                <i class="fas fa-user"></i>
            </span>
        {{ form_row(form.lastname) }}
    </div>

    <div class="field">
        <div class="control">

           <span class="icon is-small is-left">
      <i class="fas fa-user"></i>
    </span> {{ form_row(form.firstname) }}
    </div>
    </div>

    <div class="field">
        <div class="control">
            <i class="far fa-calendar-alt"></i>{{ form_row(form.birthdate) }}
    </div>
    </div>

    <div class="field">
        <div class="control">
            <i class="fas fa-envelope"></i> {{ form_row(form.email) }}
    </div>
    </div>

    <div class="field">
        <div class="control">

    {{ form_row(form.phone) }}
    </div>
    </div>

    <br>

    <h4 class="title is-4">Adresse postale</h4>

    <div class="field">
        <div class="control">

            {{ form_row(form.streetNumber) }}
        </div>
    </div>

    <div class="field">
        <div class="control">

            {{ form_row(form.streetName) }}
        </div>
    </div>

    <div class="field">
        <div class="control">

            {{ form_row(form.zip) }}
        </div>
    </div>

    <div class="field">
        <div class="control">

            {{ form_row(form.city) }}
        </div>
    </div>

    <div class="field">
        <div class="control">

            {{ form_row(form.country) }}
        </div>
    </div>



    <div class="control">
        <button class="button is-primary" type="submit">
            Enregistrer
        </button>
    </div>
    {{ form_end(form) }}

    </div>





{% endblock %}