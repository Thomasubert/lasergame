{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} - Les jeux{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">

    <a href="{{ path('app_game_edit') }}"
       class="button btn-outline-primary mb-3">
        Ajouter un jeu
    </a>

    <br><br>

    <table class="table">
        <tr>
            <th>Nom du jeu</th>
            <th>Score attribué en cas de victoire</th>
            <th width="250px"></th>
        </tr>
        {% for game in games %}
            <tr>
                <td>{{ game.name }}</td>
                <td>{{ game.score }}</td>
                <td>
                    <a href="{{ path('app_game_edit', {'id': game.id}) }}"
                       class="btn btn-primary">
                        Modifier
                    </a>
                    <a href="{{ path('app_game_delete', {'id': game.id}) }}"
                       class="btn btn-danger">
                        Supprimer
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="text-center">
                    Aucun résultat
                </td>
            </tr>
        {% endfor %}
    </table>
</div>
{% endblock %}
