<div class="container">
    #}{#
    affichage des messages flash :
    boucle en clé => valeur sur les messages flash
    stockés dans la session (stockés par type de message)
    foreach ($allFlashMessages as $type => $messages)
    #}{#

    {% for type, messages in app.session.flashBag.all %}
        {% for message in messages %}
            #}{# pour la classe alert-danger du bootstrap #}{#
            {% if type == 'error' %}
                {% set type = 'danger' %}
            {% endif %}
            <div class="alert alert-{{ type }} mt-2">
                {{ message|raw }}
            </div>
        {% endfor %}
    {% endfor %}#}
