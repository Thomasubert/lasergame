{% extends 'base.html.twig' %}

{% block title %}Activer la carte!!!{% endblock %}


{% block body %}
    <h1>Activer la carte</h1>
          {{ form_start(form) }}
    <table>
      <tr>
      <th>{{ form_row(form.keycenter) }}</th>
    --<th>{{ form_row(form.keycard) }}</th>
    --<th>{{ form_row(form.checksum) }}</th>
     </tr>
    </table>
        <div class="text-right">
            {% if workflow_can(card, 'active') %}
                <a href="{{ path('card_workflow', {'id': card.id,
                    'state' : 'active',
                    'redirect' : app.request('_route')}) }}"
                   class="btn btn-primary">
                    Enregistrer
                </a>
            {% endif %}

        </div>
    {{ form_end(form) }}
    <a href="{{ path('userhome') }}"
       class="btn btn-outline-secondary">
        Retour
    </a>

{% endblock %}