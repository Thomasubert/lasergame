{% extends 'base.html.twig' %}

{% block title %}Hello CardController!{% endblock %}

{% block body %}
    <h1>Cartes</h1>
    <a href="{{ path('app_search_searchcard') }}"   
       class="btn btn-outline-primary mb-3">
        Recherche une carte
    </a> <br/>
    <a href="{{ path('app_admin_card_edit') }}"
       class="btn btn-outline-primary mb-3">
        Ajouter une carte
    </a> <br/>
    <a href="{{ path('app_admin_card_index') }}"
       class="btn btn-outline-primary mb-3">
        Lister les cartes
    </a>

    <table class="table">
        <tr>
            <th>Code Centre</th>
            <th>Code carte</th>
            <th>Clé</th>
            <th>Nombre de parties</th>
            <th width="250px"></th>
        </tr>
        {% for card in cards%}
            <tr>
                <td>{{ card.getCodeCentre() }}</td>
                <td>{{ card.getCodeCard()}}</td>
                <td>{{ card.getChecksum() }}</td>
                <td>{{ card.getStatus() }}</td>
                <td>{{ card.getNumberOfGames() }}</td>
                <td>
                    {% if card.getStatus()=="attribué" %}
                    <a href="{{ path('app_admin_card_edit', {'id': card.id}) }}"
                       class="btn btn-primary">
                        Activer
                     </a>
                    {% else %}
                        <a href="{{ path('app_admin_card_edit', {'id': card.id}) }}"
                           class="btn btn-primary">
                            Attribué
                        </a>
                    {% endif %}
                    <a href="{{ path('app_admin_card_delete', {'id': card.id}) }}"
                       class="btn btn-danger">
                        Supprimer
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5" class="text-center">
                    Aucun résultat
                </td>
            </tr>
        {% endfor %}
    </table>


{% endblock %}
